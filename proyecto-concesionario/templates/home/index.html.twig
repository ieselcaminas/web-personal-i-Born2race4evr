{% extends 'base.html.twig' %}
{% block title %}Bienvenido a la Web de Coches{% endblock %}

{% block stylesheets %}
<style>
    body {
        background: linear-gradient(135deg, #007bff, #6610f2, #6f42c1);
        background-size: 400% 400%;
        animation: gradientMove 10s ease infinite;
        color: #fff;
        min-height: 100vh;
        display: flex;
        justify-content: center;
        align-items: center;
    }

    @keyframes gradientMove {
        0% { background-position: 0% 50%; }
        50% { background-position: 100% 50%; }
        100% { background-position: 0% 50%; }
    }

    .welcome-card {
        background: rgba(255, 255, 255, 0.1);
        backdrop-filter: blur(6px);
        border-radius: 20px;
        padding: 50px;
        text-align: center;
        box-shadow: 0 4px 30px rgba(0, 0, 0, 0.2);
        animation: fadeIn 1.5s ease;
    }

    @keyframes fadeIn {
        from { opacity: 0; transform: translateY(30px); }
        to { opacity: 1; transform: translateY(0); }
    }

    .welcome-title {
        font-size: 2.5rem;
        font-weight: 700;
        margin-bottom: 1rem;
    }

    .welcome-text {
        font-size: 1.2rem;
        opacity: 0.9;
        margin-bottom: 2rem;
    }

    .btn-start {
        border: none;
        color: #000;
        font-weight: bold;
        padding: 12px 30px;
        border-radius: 30px;
        transition: all 2s ease;
    }

    .btn-start:hover {
        transform: scale(1.05);
        box-shadow: 0 0 15px rgba(0, 0, 0, 1);
    }
</style>
{% endblock %}

{% block body %}
<div class="welcome-card">
    <h1 class="welcome-title">Bienvenido a la Web de Coches</h1>
    <p class="welcome-text">Gestiona fácilmente tu colección de coches: añade, edita o elimina con un solo clic.</p>
    <a href="{{ path('coche_index') }}" class="btn btn-start">
        Entrar al panel
    </a>
</div>
{% endblock %}
