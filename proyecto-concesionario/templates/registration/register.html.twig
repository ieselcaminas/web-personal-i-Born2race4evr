{% extends 'base.html.twig' %}
{% block title %}Registro de Usuario{% endblock %}

{% block body %}
<body class="login-register-bg">
    <div class="row justify-content-center">
        <div class="col-md-6">
            <div class="card shadow-sm card-hover">
                <div class="card-body">
                    <h1 class="text-center mb-4 gradient-title">Crear una cuenta</h1>

                    {{ form_start(registrationForm) }}
                        <div class="mb-3">
                            {{ form_label(registrationForm.email, 'Correo electrónico', {'label_attr': {'class': 'form-label'}}) }}
                            {{ form_widget(registrationForm.email, {'attr': {'class': 'form-control'}}) }}
                            {{ form_errors(registrationForm.email) }}
                        </div>

                        <div class="mb-3">
                            {{ form_label(registrationForm.plainPassword, 'Contraseña', {'label_attr': {'class': 'form-label'}}) }}
                            {{ form_widget(registrationForm.plainPassword, {'attr': {'class': 'form-control'}}) }}
                            {{ form_errors(registrationForm.plainPassword) }}
                        </div>

                        <div class="form-check mb-3">
                            {{ form_widget(registrationForm.agreeTerms, {'attr': {'class': 'form-check-input'}}) }}
                            {{ form_label(registrationForm.agreeTerms, 'Aceptar términos y condiciones', {'label_attr': {'class': 'form-check-label'}}) }}
                            {{ form_errors(registrationForm.agreeTerms) }}
                        </div>

                        <button type="submit" class="btn btn-success w-100">Registrarse</button>
                    {{ form_end(registrationForm) }}

                    <div class="mt-3 text-center">
                        <small>¿Ya tienes cuenta? <a href="{{ path('app_login') }}">Inicia sesión</a></small>
                    </div>
                </div>
            </div>
        </div>
    </div>
</body>
<style>
    .gradient-title {
        background: linear-gradient(90deg, #007bff, #6610f2, #6f42c1);
        background-size: 200% 200%;
        -webkit-background-clip: text;
        -webkit-text-fill-color: transparent;
        animation: gradientText 5s ease infinite;
        font-weight: 700;
    }

    @keyframes gradientText {
        0% { background-position: 0% 50%; }
        50% { background-position: 100% 50%; }
        100% { background-position: 0% 50%; }
    }

    .btn {
        transition: transform 0.2s ease, box-shadow 0.2s ease;
    }

    .btn:hover {
        transform: translateY(-2px);
        box-shadow: 0 5px 15px rgba(0,0,0,0.2);
    }

    .card-hover {
    background: rgba(255,255,255,0.1);
    backdrop-filter: blur(10px);
    transition: transform 0.3s ease, box-shadow 0.3s ease;
    border-radius: 15px;
    overflow: hidden;
    }

    body.login-register-bg {
        background: linear-gradient(135deg, #007bff, #6610f2, #6f42c1, #00d4ff);
        background-size: 400% 400%;
        animation: gradientMove 15s ease infinite;
        min-height: 100vh;
        display: flex;
        justify-content: center;
        align-items: center;
    }

    @keyframes gradientMove {
        0% { background-position: 0% 50%; }
        50% { background-position: 100% 50%; }
        100% { background-position: 0% 50%; }
    }

    body.login-register-bg {
    background: linear-gradient(135deg, #a8dadc, #f6bd60, #ffd6a5, #caffbf);        background-size: 400% 400%;
        animation: gradientMove 15s ease infinite;
        min-height: 100vh;
        display: flex;
        justify-content: center;
        align-items: center;
    }

    @keyframes gradientMove {
        0% { background-position: 0% 50%; }
        50% { background-position: 100% 50%; }
        100% { background-position: 0% 50%; }
    }

</style>
{% endblock %}
